!!!
%html
%head
  %title= "CW Motors"
  = stylesheet_link_tag 'reset', :media => 'all'
  = stylesheet_link_tag '960', 'formtastic', 'formtastic_changes', 'screen', :media => 'screen'
  = stylesheet_link_tag 'print', :media => 'print'
  = javascript_include_tag :defaults
  = csrf_meta_tag

%body

  .container_12
    .grid_12
      #navigation
        #search
          = form_tag(search_path, :method => :get) do
            = label_tag 'query', 'Search:'
            = text_field_tag 'query', params['query']
            = submit_tag 'search'
        %ul
          %li= link_to 'Home', root_path
          %li= link_to 'Customers', customers_path
          %li= link_to 'Invoices', invoices_path

  .clear

  .container_12
    .grid_12
      #content
        = yield
