%h1= t('.title')
%p.hide_on_print= link_to t('.new_invoice'), new_invoice_path, :class => 'button new_invoice'

.pagination= paginate @invoices

%table
  %thead
    %tr
      %th= 'ID'
      %th= 'Customer'
      %th= 'Date'
      %th= 'Make/Model'
      %th= 'Reg. No.'
      %th= 'MOT'
      %th= 'VAT'
      %th= 'Total'
      %th.hide_on_print= t 'actions'
  
  %tbody
    - for invoice in @invoices
      %tr{ :class => cycle(:odd, :even) }
        %td= invoice.id
        %td= invoice.customer.short_code
        %td= invoice.date
        %td= invoice.make_model
        %td= invoice.registration
        %td= invoice.mot
        %td= invoice.vat
        %td= invoice.total
        %td.action.hide_on_print
          = link_to t('show'), invoice, :class => 'button'
          = link_to t('edit'), edit_invoice_path(invoice), :class => 'button'
          = link_to t('destroy'), invoice, :confirm => t('are_you_sure'), :method => :delete, :class => 'button'

.pagination= paginate @invoices